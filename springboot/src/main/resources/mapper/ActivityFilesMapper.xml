<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yihu.mapper.ActivityFilesMapper">
    <insert id="insert" parameterType="com.yihu.entity.ActivityFiles" useGeneratedKeys="true" keyProperty="id">
        insert into activity_files(activity_id,name,storage_name,file_sort,file_url,del_flag)
        values(#{activityId},#{name},#{storageName},#{fileSort},#{fileUrl},#{delFlag})
    </insert>



    <delete id="deleteByActivityId" parameterType="java.lang.Integer">
        update activity_files
        SET del_flag = 'Y'
        WHERE activity_id = #{activityId}
    </delete>

    <select id="findById" parameterType="java.lang.Integer">
        SELECT * FROM activity_files
        WHERE id = #{id} AND del_flag = 'N'
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM activity_files
        WHERE id = #{id}
    </delete>

    <select id="findByActivityId" parameterType="java.lang.Integer" resultType="com.yihu.entity.ActivityFiles">
        SELECT * FROM activity_files
        WHERE activity_id = #{activityId}  AND del_flag = 'N'
    </select>



</mapper>
