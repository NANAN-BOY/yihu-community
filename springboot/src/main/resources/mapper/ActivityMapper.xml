<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yihu.mapper.ActivityMapper">
    <insert id="insert" parameterType="com.yihu.entity.Activity" useGeneratedKeys="true" keyProperty="id">
        insert into file(title,notice_content,staff_count,volunteer_count,service_object_count,status,del_flag,create_time,create_by_id,update_time,update_by_id)
        values(#{title},#{noticeContent},#{staffCount},#{volunteerCount},#{serviceObjectCount},#{status},#{delFlag},#{createTime},#{createById},#{updateTime},#{updateById}})
    </insert>

    <!-- 根据活ID删除记录 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM activity
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="com.yihu.entity.Activity">
        update activity set title = #{title},notice_content = #{noticeContent},staff_count = #{staffCount},volunteer_count = #{volunteerCount},service_object_count = #{serviceObjectCount},status = #{status},del_flag = #{delFlag},last_update_time = #{lastUpdateTime},last_update_by_id = #{lastUpdateById}
        where id = #{id}
    </update>

    <select id="" resultType="com.yihu.entity.Activity" parameterType="java.lang.Integer">
        select * from activity where create_id = #{createId}
    </select>

</mapper>
