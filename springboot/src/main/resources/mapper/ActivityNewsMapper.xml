<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yihu.mapper.ActivityNewsMapper">
    <insert id="insert" parameterType="com.yihu.entity.ActivityNews">
        insert into activity_news(activity_id,news_platform,news_link,del_flag)
        values(#{activityId},#{newsPlatform},#{newsLink},#{delFlag})
    </insert>


    <!-- 根据活动ID删除新闻记录 -->
    <delete id="deleteByActivityId" parameterType="java.lang.Integer">
        DELETE FROM activity_news
        WHERE activity_id = #{activityId}
    </delete>


</mapper>
